<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="org.example.calculatorapp.CalculatorController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER" hgap="10" vgap="10">

    <!-- Текстовое поле для отображения ввода -->
    <TextField fx:id="display" GridPane.columnSpan="4" editable="false" />

    <!-- Цифры -->
    <Button text="1" onAction="#handleDigit" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Button text="2" onAction="#handleDigit" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Button text="3" onAction="#handleDigit" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
    <Button text="+" onAction="#handleOperator" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

    <Button text="4" onAction="#handleDigit" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Button text="5" onAction="#handleDigit" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Button text="6" onAction="#handleDigit" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
    <Button text="-" onAction="#handleOperator" GridPane.rowIndex="2" GridPane.columnIndex="3"/>

    <Button text="7" onAction="#handleDigit" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <Button text="8" onAction="#handleDigit" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    <Button text="9" onAction="#handleDigit" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
    <Button text="*" onAction="#handleOperator" GridPane.rowIndex="3" GridPane.columnIndex="3"/>

    <Button text="C" onAction="#handleClear" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <Button text="0" onAction="#handleDigit" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    <Button text="=" onAction="#handleEqual" GridPane.rowIndex="4" GridPane.columnIndex="2"/>
    <Button text="/" onAction="#handleOperator" GridPane.rowIndex="4" GridPane.columnIndex="3"/>

</GridPane>
